    <script>
        $(document).ready(function () {
            $('.add-to-cart-btn').on('click', function (event) {
                const button = $(this);
                const productId = button.data('product-id');

                $.post('/Cart/AddToCartAjax', { id: productId }, function (response) {
                    if (!response.success) {
                        alert(response.message);
                        return;
                    }

                    const icon = button.find('.product-icon i').clone().css({
                        position: 'absolute',
                        zIndex: 1000,
                        fontSize: '20px',
                        color: '#007bff'
                    }).appendTo('body');

                    const start = button.offset();
                    const end = $('#cart-icon').offset();

                    icon.css({
                        top: start.top,
                        left: start.left
                    });

                    icon.animate({
                        top: end.top,
                        left: end.left,
                        opacity: 0
                    }, 800, function () {
                        icon.remove();

                        // hiệu ứng giỏ hàng
                        $('#cart-icon').addClass('animate__animated animate__tada');
                        setTimeout(() => {
                            $('#cart-icon').removeClass('animate__animated animate__tada');
                        }, 800);
                    });
                });
            });
        });
    </script>
    <!--Chat bot js-->
    <script>
        window.addEventListener("message", function (event) {
            if (!event.data || typeof event.data !== "object") return;

            const iframe = document.getElementById("chatbot-iframe");
            if (!iframe) return;

            if (event.data.type === "chatbot-open") {
                iframe.style.width = "400px";
                iframe.style.height = "500px";
                iframe.style.borderRadius = "12px";
            } else if (event.data.type === "chatbot-close") {
                iframe.style.width = "60px";
                iframe.style.height = "60px";
                iframe.style.borderRadius = "12px";
            }
        }, false);
    </script>
