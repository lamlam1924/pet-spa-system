        // Hàm helper để làm việc với Bootstrap Modal một cách an toàn
        function safeGetModalInstance(element) {
            try {
                if (typeof bootstrap !== 'undefined' && bootstrap.Modal && bootstrap.Modal.getInstance) {
                    return bootstrap.Modal.getInstance(element);
                } else {
                    console.warn('Bootstrap Modal.getInstance not available');
                    return null;
                }
            } catch (error) {
                console.error('Error getting modal instance:', error);
                return null;
            }
        }

        // Hàm helper để tạo modal instance một cách an toàn
        function safeCreateModal(element, options = {}) {
            try {
                if (typeof bootstrap !== 'undefined' && bootstrap.Modal) {
                    return new bootstrap.Modal(element, options);
                } else {
                    console.warn('Bootstrap Modal not available');
                    return null;
                }
            } catch (error) {
                console.error('Error creating modal:', error);
                return null;
            }
        }
