    <!-- 6. Script riêng cho datepicker và timepicker -->
    <script>
        // Đảm bảo DOM đã load xong và Bootstrap đã sẵn sàng
        document.addEventListener('DOMContentLoaded', function() {
            // Kiểm tra xem bootstrap có tồn tại không
            if (typeof bootstrap !== 'undefined') {
                console.log('Bootstrap loaded successfully');
            } else {
                console.error('Bootstrap not loaded');
            }

            // Datepicker initialization
            if (typeof $('#datepicker').datepicker === 'function') {
                $('#datepicker').datepicker({
                    iconsLibrary: 'fontawesome',
                    disableDaysOfWeek: [0, 0],
                });
            }

            if (typeof $('#datepicker2').datepicker === 'function') {
                $('#datepicker2').datepicker({
                    iconsLibrary: 'fontawesome',
                    icons: {
                        rightIcon: '<span class="fa fa-caret-down"></span>'
                    }
                });
            }

            // Timepicker initialization
            if (typeof $('#timepicker').timepicker === 'function') {
                var timepicker = $('#timepicker').timepicker({
                    format: 'HH.MM'
                });
            }
        });

        // Hàm helper để làm việc với Bootstrap Modal một cách an toàn
        function safeGetModalInstance(element) {
            try {
                if (typeof bootstrap !== 'undefined' && bootstrap.Modal && bootstrap.Modal.getInstance) {
                    return bootstrap.Modal.getInstance(element);
                } else {
                    console.warn('Bootstrap Modal.getInstance not available');
                    return null;
                }
            } catch (error) {
                console.error('Error getting modal instance:', error);
                return null;
            }
        }

        // Hàm helper để tạo modal instance một cách an toàn
        function safeCreateModal(element, options = {}) {
            try {
                if (typeof bootstrap !== 'undefined' && bootstrap.Modal) {
                    return new bootstrap.Modal(element, options);
                } else {
                    console.warn('Bootstrap Modal not available');
                    return null;
                }
            } catch (error) {
                console.error('Error creating modal:', error);
                return null;
            }
        }
    </script>

