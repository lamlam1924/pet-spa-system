<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pet Spa Staff</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/staff-layout.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("StaffDashboard", "Staff")">
                <i class="fas fa-paw me-2"></i>Pet Spa Staff
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("StaffDashboard", "Staff")">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MyAppointments", "Staff")">
                            <i class="fas fa-calendar-alt me-1"></i>Lịch hẹn của tôi
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MySchedule", "Staff")">
                            <i class="fas fa-clock me-1"></i>Lịch làm việc
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-bell"></i>
                            <span class="badge bg-danger" id="notification-count" style="display: none;">0</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" style="width: 300px;">
                            <li><h6 class="dropdown-header">Thông báo</h6></li>
                            <div id="notification-list">
                                <li><span class="dropdown-item-text">Đang tải...</span></li>
                            </div>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-center" href="#" onclick="markAllNotificationsRead()">Đánh dấu tất cả đã đọc</a></li>
                        </ul>
                    </li>
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <img src="@(Context.Session.GetString("CurrentUserAvatar") ?? "https://static.vecteezy.com/system/resources/previews/009/292/244/non_2x/default-avatar-icon-of-social-media-user-vector.jpg")" 
                                 alt="Avatar" class="rounded-circle me-1" width="24" height="24">
                            @Context.Session.GetString("CurrentUserName")
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home me-2"></i>Trang chủ
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Staff")">
                                <i class="fas fa-user me-2"></i>Thông tin cá nhân
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "Staff")">
                                <i class="fas fa-key me-2"></i>Đổi mật khẩu
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "Login")">
                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-5">
        <div class="container">
            <span class="text-muted">&copy; 2024 Pet Spa System - Staff Portal</span>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Common Staff Scripts -->
    <script>
        // Load notifications on page load
        $(document).ready(function() {
            loadNotifications();
            setInterval(loadNotifications, 30000); // Refresh every 30 seconds
        });

        function loadNotifications() {
            $.get('@Url.Action("GetNotifications", "Home")', function(response) {
                if (response.notifications) {
                    const unreadCount = response.notifications.filter(n => !n.isRead).length;
                    const badge = $('#notification-count');
                    
                    if (unreadCount > 0) {
                        badge.text(unreadCount).show();
                    } else {
                        badge.hide();
                    }
                    
                    // Update notification list
                    const notificationList = $('#notification-list');
                    notificationList.empty();
                    
                    if (response.notifications.length > 0) {
                        response.notifications.slice(0, 5).forEach(function(notification) {
                            const item = $(`
                                <li>
                                    <a class="dropdown-item ${!notification.isRead ? 'fw-bold' : ''}" href="#">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <div class="fw-bold">${notification.title}</div>
                                                <div class="small text-muted">${notification.message}</div>
                                            </div>
                                            <small class="text-muted">${formatDate(notification.createdAt)}</small>
                                        </div>
                                    </a>
                                </li>
                            `);
                            notificationList.append(item);
                        });
                    } else {
                        notificationList.append('<li><span class="dropdown-item-text">Không có thông báo</span></li>');
                    }
                }
            });
        }

        function markAllNotificationsRead() {
            $.post('@Url.Action("MarkNotificationsAsRead", "Staff")', function(response) {
                if (response.success) {
                    loadNotifications();
                }
            });
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diffTime = Math.abs(now - date);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            
            if (diffDays === 1) {
                return 'Hôm qua';
            } else if (diffDays < 7) {
                return diffDays + ' ngày trước';
            } else {
                return date.toLocaleDateString('vi-VN');
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
