@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Pet Shop Dashboard</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Content("~/Admin/Index")">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
        </ol>
    </div>

    <div class="row mb-3">
        <!-- Card mẫu thống kê -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Doanh thu tháng</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">$45,000</div>
                            <div class="mt-2 mb-0 text-muted text-xs">
                                <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> 4.2%</span>
                                <span>Sau tháng trước</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Card mẫu khác, có thể nhân lên thêm -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Lịch hẹn hôm nay</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ... Thêm card khác nếu muốn ... -->
    </div>

    <div class="row mb-3">
        <!-- Bảng dữ liệu mẫu -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">Đơn đặt gần đây</div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Khách</th>
                                <th>Dịch vụ</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><a href="#">PAW001</a></td>
                                <td>Fluffy Tail</td>
                                <td>Tắm spa</td>
                                <td><span class="badge badge-success">Hoàn thành</span></td>
                                <td><a href="#" class="btn btn-sm btn-primary">Chi tiết</a></td>
                            </tr>
                            <tr>
                                <td><a href="#">PAW002</a></td>
                                <td>Barky McBark</td>
                                <td>Cắt móng</td>
                                <td><span class="badge badge-warning">Đang xử lý</span></td>
                                <td><a href="#" class="btn btn-sm btn-primary">Chi tiết</a></td>
                            </tr>
                            <!-- ... thêm mẫu ... -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Thông báo mẫu -->
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">Thông báo mới</div>
                <div class="card-body">
                    <ul class="list-group small">
                        <li class="list-group-item">Khách A vừa đặt lịch lúc 10:02</li>
                        <li class="list-group-item">Đơn #112 xác nhận bởi Admin</li>
                        <li class="list-group-item">Feedback mới từ khách B</li>
                    </ul>
                </div>
            </div>
            <div class="card">
                <div class="card-header">Feedback khách hàng</div>
                <div class="card-body">
                    <a href="#" class="btn btn-link p-0">Xem tất cả</a>
                </div>
            </div>
        </div>
    </div>
</div>
