@model pet_spa_system1.Models.Product

@{
    ViewData["Title"] = "Product Detail";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml"; ; // hoặc đường dẫn layout khác
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Admin dashboard for Paws & Claws Pet Shop">
    <meta name="author" content="indrijunanda">
    <link href="@Url.Content("~/imgAdmin/logo/pet-logo.png")" rel="icon">
    <title>petshop - Product Detail</title>
    <link href="@Url.Content("~/vendorAdmin/fontawesome-free/css/all.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/vendorAdmin/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/cssAdmin/ruang-admin.min.css")" rel="stylesheet">
</head>


<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
       
        <!-- Sidebar -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                
                <!-- Topbar -->
                <!-- Container Fluid-->
                <div class="container-fluid" id="container-wrapper">
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Product Detail</h1>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Content("~/Admin/Index")">Trang chủ Admin</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Content("~/Admin/Products_List")">Danh Sách Sản Phẩm</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Chi tiết sản phẩm</li>
                        </ol>
                    </div>

                    <!-- Product Detail Content -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card shadow mb-4">
                                <div class="card-header bg-primary text-white">
                                    <h4 class="mb-0">Chi Tiết Sản Phẩm</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <img class="img-fluid w-100" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "~/imgProducts/default.png" : Model.ImageUrl)" alt="@Model.Name">
                                        </div>
                                        <div class="col-md-7">
                                            <h3 id="product-name">@Model.Name</h3>
                                            <p><strong>Danh mục:</strong> <span id="product-category">@(Model.ProductCategory?.Name ?? "No Category")</span></p>
                                            <p><strong>Giá:</strong> <span id="product-price" class="text-danger">@Model.Price.ToString("F2")vnđ</span></p>
                                            <p><strong>Số lượng:</strong> <span id="product-stock">@Model.Stock</span> items</p>

                                            <p><strong>Mô tả:</strong></p>
                                            <p id="product-description">@(Model.Description ?? "No description available.")</p>
                                            <p><strong>Ngày tạo:</strong> <span id="product-createdat">@(Model.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</span></p>
                                        </div>
                                    </div>
                                    <a href="@Url.Action("Products_List", "Admin")" class="btn btn-secondary mt-3">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Reviews Section -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Customer Reviews for Premium Cat Food</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table align-items-center table-flush">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>Review ID</th>
                                                    <th>Reviewer</th>
                                                    <th>Rating</th>
                                                    <th>Comment</th>
                                                    <th>Created At</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>1</td>
                                                    <td>John Doe</td>
                                                    <td><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i></td>
                                                    <td>My cat loves this food! Great quality and fast delivery.</td>
                                                    <td>2025-05-26 12:00:00</td>
                                                </tr>
                                                <tr>
                                                    <td>2</td>
                                                    <td>Alice Smith</td>
                                                    <td><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="far fa-star text-warning"></i></td>
                                                    <td>Good product, but a bit pricey. My cat seems to enjoy it.</td>
                                                    <td>2025-05-25 16:45:00</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order History Section -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card shadow">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Order History for Premium Cat Food</h6>
                                    <a class="m-0 float-right btn btn-primary btn-sm" href="#">View All Orders <i class="fas fa-chevron-right"></i></a>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table align-items-center table-flush">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>Order ID</th>
                                                    <th>Buyer Name</th>
                                                    <th>Username</th>
                                                    <th>Quantity</th>
                                                    <th>Total Amount</th>
                                                    <th>Status</th>
                                                    <th>Order Date</th>
                                                    <th>Shipping Address</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td><a href="#">1</a></td>
                                                    <td>John Doe</td>
                                                    <td>john_doe</td>
                                                    <td>1</td>
                                                    <td>$25.99</td>
                                                    <td><span class="badge badge-success">Delivered</span></td>
                                                    <td>2025-05-26 10:00:00</td>
                                                    <td>123 Main St, City A</td>
                                                    <td><a href="#" class="btn btn-sm btn-primary">Detail</a></td>
                                                </tr>
                                                <tr>
                                                    <td><a href="#">2</a></td>
                                                    <td>Alice Smith</td>
                                                    <td>alice_smith</td>
                                                    <td>2</td>
                                                    <td>$51.98</td>
                                                    <td><span class="badge badge-danger">Pending</span></td>
                                                    <td>2025-05-25 15:30:00</td>
                                                    <td>789 Some Ave, City C</td>
                                                    <td><a href="#" class="btn btn-sm btn-primary">Detail</a></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Order History Section -->
                    <!-- Donate Link -->
                    <!-- Modal Logout -->
                    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
                         aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabelLogout">Leaving So Soon?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to logout?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                                    <a href="@Url.Content("~/Admin/Login")" class="btn btn-primary">Logout</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!---Container Fluid-->
            </div>
            <!-- Footer -->
            <!-- Footer -->
        </div>
    </div>

    <!-- Scroll to top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- ...rest of the file remains unchanged... -->
    <script src="@Url.Content("~/vendorAdmin/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/vendorAdmin/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/vendorAdmin/jquery-easing/jquery.easing.min.js")"></script>
    <script src="@Url.Content("~/jsAdmin/ruang-admin.min.js")"></script>
</body>

</html>