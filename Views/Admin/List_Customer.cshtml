  <script>
// Dữ liệu user mẫu
let users = [
  { userID: 1, username: 'admin', email: 'admin@example.com', role: 'Admin', createdAt: '2025-05-25 10:00:00' },
  { userID: 2, username: 'john_doe', email: 'john@example.com', role: 'User', createdAt: '2025-05-26 15:00:00' }
];

// Hiển thị user lên bảng
function renderUserTable() {
  const tbody = document.getElementById('userTableBody');
  if (!tbody) return console.error('Không tìm thấy tbody với ID userTableBody');

  tbody.innerHTML = '';

  users.forEach(user => {
    const tr = document.createElement('tr');
    tr.innerHTML = `
      <td>${user.userID}</td>
      <td>${user.username}</td>
      <td>${user.email}</td>
      <td>${user.role}</td>
      <td>Active</td> <!-- Bạn có thể sửa hoặc thay đổi cột Status này nếu cần -->
      <td>${user.createdAt}</td>
      <td>
        <button class="btn btn-sm btn-primary edit-user-btn" data-id="${user.userID}">Edit</button>
        <button class="btn btn-sm btn-danger delete-user-btn" data-id="${user.userID}">Delete</button>
      </td>
    `;
    tbody.appendChild(tr);
  });
}

// Mở modal edit
document.addEventListener('click', function (e) {
  if (e.target.classList.contains('edit-user-btn')) {
    const userID = parseInt(e.target.dataset.id);
    const user = users.find(u => u.userID === userID);
    if (user) {
      document.getElementById('edit-user-id').value = user.userID;
      document.getElementById('edit-username').value = user.username;
      document.getElementById('edit-email').value = user.email;
      document.getElementById('edit-role').value = user.role;

      new bootstrap.Modal(document.getElementById('editUserModal')).show();
    }
  }

  // Xử lý xóa user
  if (e.target.classList.contains('delete-user-btn')) {
    const userID = parseInt(e.target.dataset.id);
    if (confirm('Are you sure you want to delete this user?')) {
      users = users.filter(u => u.userID !== userID);
      renderUserTable();
    }
  }
});

// Cập nhật user
document.getElementById('editUserForm').addEventListener('submit', function (e) {
  e.preventDefault();
  const id = parseInt(document.getElementById('edit-user-id').value);
  const index = users.findIndex(u => u.userID === id);
  if (index !== -1) {
    users[index].username = document.getElementById('edit-username').value;
    users[index].email = document.getElementById('edit-email').value;
    users[index].role = document.getElementById('edit-role').value;

    renderUserTable();
    bootstrap.Modal.getInstance(document.getElementById('editUserModal')).hide();
  }
});

// Khởi tạo
window.onload = renderUserTable;
</script>


