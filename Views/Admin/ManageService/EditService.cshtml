@model pet_spa_system1.Models.Service
@{
    ViewData["Title"] = "Chỉnh sửa dịch vụ";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/cssjsservice/service-common.css" />
    <link rel="stylesheet" href="~/cssjsservice/service-edit.css" />
}

<div class="container-fluid" id="container-wrapper">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Chỉnh sửa dịch vụ</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ServiceList", "AdminService")">Dịch vụ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
        </ol>
    </div>

    <div class="row">
        <!-- Form Column -->
        <div class="col-lg-8">
            <div class="card shadow mb-4 form-card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa thông tin dịch vụ</h6>
                    <div>
                        <span class="badge @(Model.IsActive == true ? "badge-success" : "badge-danger")">
                            @(Model.IsActive == true ? "Đang hoạt động" : "Đã tạm ngưng")
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <form id="editServiceForm" asp-controller="AdminService" asp-action="EditService" method="post">
                        <input type="hidden" asp-for="ServiceId" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <!-- Tên dịch vụ -->
                        <div class="form-group">
                            <label for="Name" class="form-label required-field">Tên dịch vụ</label>
                            <input asp-for="Name" class="form-control" id="serviceName" required 
                                   placeholder="Nhập tên dịch vụ" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small class="help-text">Tên nên ngắn gọn và dễ nhớ (tối đa 100 ký tự)</small>
                        </div>

                        <!-- Danh mục -->
                        <div class="form-group">
                            <label for="CategoryId" class="form-label required-field">Danh mục</label>
                            <select asp-for="CategoryId" class="form-control" id="serviceCategory" required>
                                <option value="">-- Chọn danh mục --</option>
                                @foreach (var cat in ViewBag.Categories)
                                {
                                    <option value="@cat.CategoryId" selected="@(Model.CategoryId == cat.CategoryId)">
                                        @cat.Name
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                            <div class="d-flex justify-content-between">
                                <small class="help-text">Chọn danh mục phù hợp cho dịch vụ</small>
                                <a href="@Url.Action("ServiceCategory", "Admin")" class="text-info">
                                    <i class="fas fa-plus-circle"></i> Quản lý danh mục
                                </a>
                            </div>
                        </div>

                        <!-- Giá -->
                        <div class="form-group">
                            <label for="Price" class="form-label required-field">Giá dịch vụ</label>
                            <div class="input-group">
                                <input asp-for="Price" type="number" class="form-control" id="servicePrice" required 
                                       min="0" step="1000" placeholder="Nhập giá dịch vụ" />
                                <div class="input-group-append">
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                            <small class="help-text">Giá đã bao gồm thuế VAT (nếu có)</small>
                        </div>

                        <!-- Thời gian -->
                        <div class="form-group">
                            <label for="DurationMinutes" class="form-label required-field">Thời gian thực hiện</label>
                            <div class="input-group">
                                <input asp-for="DurationMinutes" type="number" class="form-control" id="serviceDuration" required 
                                       min="5" step="5" placeholder="Nhập thời gian thực hiện" />
                                <div class="input-group-append">
                                    <span class="input-group-text">Phút</span>
                                </div>
                            </div>
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                            <small class="help-text">Thời gian dự kiến để hoàn thành dịch vụ</small>
                        </div>

                        <!-- Mô tả -->
                        <div class="form-group">
                            <label for="Description" class="form-label">Mô tả chi tiết</label>
                            <textarea asp-for="Description" class="form-control" id="serviceDescription" rows="5"
                                      placeholder="Mô tả chi tiết về dịch vụ..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="help-text">Mô tả chi tiết giúp khách hàng hiểu rõ hơn về dịch vụ</small>
                        </div>

                        <!-- Trạng thái -->
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" asp-for="IsActive" id="serviceStatus">
                                <label class="custom-control-label" for="serviceStatus">
                                    @(Model.IsActive == true ? "Dịch vụ đang hoạt động" : "Dịch vụ đang tạm ngưng")
                                </label>
                            </div>
                            <small class="help-text">Dịch vụ sẽ hiển thị và có thể đặt lịch nếu được kích hoạt</small>
                        </div>

                        <div class="form-group mt-4 d-flex justify-content-between">
                            <a href="@Url.Action("ServiceDetail", "Admin", new { id = Model.ServiceId })" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <div>
                                <button type="reset" class="btn btn-light" onclick="resetForm()">
                                    <i class="fas fa-undo"></i> Hủy thay đổi
                                </button>
                                <button type="submit" class="btn btn-primary ml-2">
                                    <i class="fas fa-save"></i> Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Preview Column -->
        <div class="col-lg-4">
            <div class="sticky-container">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Xem trước</h6>
                    </div>
                    <div class="card-body">
                        <div class="preview-card">
                            <div class="preview-title">
                                <i class="fas fa-eye"></i> Xem trước dịch vụ
                            </div>
                            <div class="preview-service-name" id="previewName">@Model.Name</div>
                            <div class="preview-service-category" id="previewCategory">
                                @ViewBag.CategoryName
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="preview-service-price" id="previewPrice">@Model.Price.ToString("N0") đ</div>
                                <div class="preview-service-duration" id="previewDuration">@Model.DurationMinutes phút</div>
                            </div>
                            <div class="preview-service-description" id="previewDescription">
                                @(string.IsNullOrEmpty(Model.Description) ? "Chưa có mô tả chi tiết cho dịch vụ này." : Model.Description)
                            </div>
                            <div class="mt-3 text-right">
                                <span class="badge @(Model.IsActive == true ? "badge-success" : "badge-secondary")" id="previewStatus">
                                    @(Model.IsActive == true ? "Hoạt động" : "Tạm ngưng")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- History Card -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-info">
                            <i class="fas fa-history"></i> Lịch sử thay đổi
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.ChangeHistory != null && ViewBag.ChangeHistory.Count > 0)
                        {
                            <div class="changelog">
                                @foreach (var change in ViewBag.ChangeHistory)
                                {
                                    <div class="changelog-item">
                                        <div class="changelog-date">@change.ChangeDate.ToString("dd/MM/yyyy HH:mm")</div>
                                        <div class="changelog-user">@change.UserName</div>
                                        <div class="changelog-content">
                                            @change.ChangeDescription
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                                <p class="mb-0">Chưa có lịch sử thay đổi</p>
                            </div>
                        }
                    </div>
                </div>
                
                <!-- Danger Zone -->
                <div class="card shadow mb-4 border-left-danger">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-danger">Vùng nguy hiểm</h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small mb-3">
                            Hành động này không thể khôi phục. Hãy cân nhắc kỹ trước khi thực hiện.
                        </p>
                        <button type="button" id="btnDeleteService" class="btn btn-danger btn-block">
                            <i class="fas fa-trash"></i> Xóa dịch vụ này
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác nhận xóa -->
<div class="modal fade" id="deleteServiceModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa dịch vụ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Bạn có chắc chắn muốn xóa dịch vụ <strong>@Model.Name</strong>?</p>
                <p class="text-danger mb-0">Hành động này không thể hoàn tác và sẽ xóa tất cả dữ liệu liên quan đến dịch vụ này!</p>
            </div>
            <div class="modal-footer">
                <form id="deleteServiceForm" asp-controller="AdminService" asp-action="DeleteService" method="post">
                    <input type="hidden" name="id" value="@Model.ServiceId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy bỏ</button>
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/cssjsservice/service-utils.js"></script>
    <script src="~/cssjsservice/service-edit.js"></script>
    <script>
        // Hiển thị thông báo nếu có
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            $(document).ready(function() {
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: '@TempData["SuccessMessage"]',
                    confirmButtonText: 'OK'
                });
            });
            </text>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            $(document).ready(function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: '@TempData["ErrorMessage"]'
                });
            });
            </text>
        }
        
        // Initialize service data for reset function
        const serviceData = {
            name: '@Model.Name',
            categoryId: '@Model.CategoryId',
            price: '@Model.Price',
            duration: '@Model.DurationMinutes',
            description: '@(Model.Description?.Replace("\n", "\\n"))',
            isActive: @(Model.IsActive == true ? "true" : "false"),
            categoryName: '@Html.Raw(ViewBag.CategoryName)',
            formattedPrice: '@Model.Price.ToString("N0") đ'
        };
        
        // Call resetForm on page load to initialize the preview
        $(document).ready(function() {
            resetForm(serviceData);
        });
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
