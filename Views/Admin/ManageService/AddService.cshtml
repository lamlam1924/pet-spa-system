@model pet_spa_system1.Models.Service
@{
    ViewData["Title"] = "Thêm dịch vụ mới";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/cssjsservice/service-common.css" />
    <link rel="stylesheet" href="~/cssjsservice/service-edit.css" />
}

<div class="container-fluid" id="container-wrapper">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Thêm dịch vụ mới</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ServiceList", "AdminService")">Dịch vụ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
        </ol>
    </div>

    <div class="row">
        <!-- Form Column -->
        <div class="col-lg-8">
            <div class="card shadow mb-4 form-card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin dịch vụ</h6>
                </div>
                <div class="card-body">
                    <form id="addServiceForm" asp-controller="AdminService" asp-action="AddService" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <!-- Tên dịch vụ -->
                        <div class="form-group">
                            <label asp-for="Name" class="form-label required-field">Tên dịch vụ</label>
                            <input asp-for="Name" class="form-control" id="serviceName" required 
                                   placeholder="Nhập tên dịch vụ" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small class="help-text">Tên nên ngắn gọn và dễ nhớ (tối đa 100 ký tự)</small>
                        </div>

                        <!-- Danh mục -->
                        <div class="form-group">
                            <label asp-for="CategoryId" class="form-label required-field">Danh mục</label>
                            <select asp-for="CategoryId" class="form-control" id="serviceCategory" required>
                                <option value="">-- Chọn danh mục --</option>
                                @foreach (var cat in ViewBag.Categories)
                                {
                                    <option value="@cat.CategoryId">@cat.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                            <div class="d-flex justify-content-between">
                                <small class="help-text">Chọn danh mục phù hợp cho dịch vụ</small>
                                <a href="@Url.Action("ServiceCategory", "AdminService")" class="text-info">
                                    <i class="fas fa-plus-circle"></i> Thêm danh mục mới
                                </a>
                            </div>
                        </div>

                        <!-- Giá -->
                        <div class="form-group">
                            <label asp-for="Price" class="form-label required-field">Giá dịch vụ</label>
                            <div class="input-group">
                                <input asp-for="Price" type="number" class="form-control" id="servicePrice" required 
                                       min="0" step="1000" placeholder="Nhập giá dịch vụ" />
                                <div class="input-group-append">
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                            <small class="help-text">Giá đã bao gồm thuế VAT (nếu có)</small>
                        </div>

                        <!-- Thời gian -->
                        <div class="form-group">
                            <label asp-for="DurationMinutes" class="form-label required-field">Thời gian thực hiện</label>
                            <div class="input-group">
                                <input asp-for="DurationMinutes" type="number" class="form-control" id="serviceDuration" required 
                                       min="5" step="5" placeholder="Nhập thời gian thực hiện" />
                                <div class="input-group-append">
                                    <span class="input-group-text">Phút</span>
                                </div>
                            </div>
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                            <small class="help-text">Thời gian dự kiến để hoàn thành dịch vụ</small>
                        </div>

                        <!-- Mô tả -->
                        <div class="form-group">
                            <label asp-for="Description" class="form-label">Mô tả chi tiết</label>
                            <textarea asp-for="Description" class="form-control" id="serviceDescription" rows="5"
                                      placeholder="Mô tả chi tiết về dịch vụ..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="help-text">Mô tả chi tiết giúp khách hàng hiểu rõ hơn về dịch vụ</small>
                        </div>

                        <!-- Trạng thái -->
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" asp-for="IsActive" id="serviceStatus" checked>
                                <label class="custom-control-label" for="serviceStatus">Kích hoạt dịch vụ ngay</label>
                            </div>
                            <small class="help-text">Dịch vụ sẽ hiển thị và có thể đặt lịch nếu được kích hoạt</small>
                        </div>

                        <div class="form-group mt-4 d-flex justify-content-between">
                            <a href="@Url.Action("ServiceList", "AdminService")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <div>
                                <button type="reset" class="btn btn-light">
                                    <i class="fas fa-sync"></i> Làm mới
                                </button>
                                <button type="submit" class="btn btn-primary ml-2">
                                    <i class="fas fa-save"></i> Thêm dịch vụ
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Preview Column -->
        <div class="col-lg-4">
            <div class="sticky-container">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Xem trước</h6>
                    </div>
                    <div class="card-body">
                        <div class="preview-card">
                            <div class="preview-title">
                                <i class="fas fa-eye"></i> Xem trước dịch vụ
                            </div>
                            <div class="preview-service-name" id="previewName">Tên dịch vụ</div>
                            <div class="preview-service-category" id="previewCategory">Danh mục dịch vụ</div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="preview-service-price" id="previewPrice">0 đ</div>
                                <div class="preview-service-duration" id="previewDuration">0 phút</div>
                            </div>
                            <div class="preview-service-description" id="previewDescription">
                                Mô tả chi tiết dịch vụ sẽ hiển thị ở đây...
                            </div>
                            <div class="mt-3 text-right">
                                <span class="badge badge-success" id="previewStatus">Hoạt động</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tips Card -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-info">
                            <i class="fas fa-lightbulb"></i> Mẹo hữu ích
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="pl-4">
                            <li class="mb-2">Đặt tên dịch vụ ngắn gọn, dễ nhớ và thể hiện đúng nội dung dịch vụ.</li>
                            <li class="mb-2">Mô tả chi tiết nên nêu rõ các bước thực hiện và lợi ích của dịch vụ.</li>
                            <li class="mb-2">Ảnh dịch vụ nên chụp với chất lượng cao và thể hiện rõ kết quả.</li>
                            <li class="mb-2">Giá dịch vụ nên cạnh tranh và phù hợp với thị trường.</li>
                            <li>Thời gian thực hiện nên ước tính chính xác để khách hàng có thể sắp xếp lịch phù hợp.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/cssjsservice/service-utils.js"></script>
    <script src="~/cssjsservice/service-add.js"></script>
    <script>
        // Hiển thị thông báo nếu có
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            $(document).ready(function() {
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: '@TempData["SuccessMessage"]',
                    confirmButtonText: 'OK'
                });
            });
            </text>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            $(document).ready(function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: '@TempData["ErrorMessage"]'
                });
            });
            </text>
        }
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
