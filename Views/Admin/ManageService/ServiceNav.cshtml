@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "AdminService";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "Index";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <p class="mb-0 text-muted">@ViewData["SubTitle"]</p>
    </div>
    <ol class="breadcrumb mb-0 bg-transparent float-sm-right">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")"><i class="fas fa-home"></i></a></li>
        <li class="breadcrumb-item">Quản lý dịch vụ</li>
        <li class="breadcrumb-item active">@ViewData["SubTitle"]</li>
    </ol>
</div>

<div class="mb-4">
    <div class="nav-wrapper position-relative">
        <ul class="nav nav-pills nav-fill nav-tabs-service flex-column flex-md-row shadow-sm">
            <li class="nav-item">
                <a class="nav-link @(action == "ServiceDashboard" || action == "Index" ? "active" : "")" 
                   href="@Url.Action("ServiceDashboard", "AdminService")">
                    <i class="fas fa-tachometer-alt me-2"></i> Tổng quan
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(action == "ServiceList" ? "active" : "")" 
                   href="@Url.Action("ServiceList", "AdminService")">
                    <i class="fas fa-list me-2"></i> Danh sách dịch vụ
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(action == "ServiceCategory" ? "active" : "")" 
                   href="@Url.Action("ServiceCategory", "AdminService")">
                    <i class="fas fa-folder me-2"></i> Quản lý danh mục
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(action == "AddService" ? "active" : "")" 
                   href="@Url.Action("AddService", "AdminService")">
                    <i class="fas fa-plus-circle me-2"></i> Thêm dịch vụ mới
                </a>
            </li>
        </ul>
        <div class="nav-slider" id="navSlider"></div>
    </div>
</div>