@model pet_spa_system1.ViewModels.ServiceDetailViewModel
@{
    ViewData["Title"] = "Chi tiết dịch vụ";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/cssjsService/css/service-common.css" />
    <link rel="stylesheet" href="~/cssjsService/css/service-detail.css" />
}

<div class="service-detail-container">
    <div class="container-fluid" id="container-wrapper">
        <!-- Navigation -->
        @await Html.PartialAsync("~/Views/Admin/ManageService/ServiceNav.cshtml")
        
        <!-- Hero Section -->
        <div class="service-hero-section">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="service-hero-content">
                            <!-- Breadcrumb -->
                            <nav aria-label="breadcrumb" class="service-breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Action("ServiceList", "AdminService")">Dịch vụ</a></li>
                                    <li class="breadcrumb-item active">@Model.Service.Name</li>
                                </ol>
                            </nav>
                            
                            <!-- Service Header -->
                            <div class="service-header-enhanced">
                                <div class="service-status-badge @(Model.Service.IsActive == true ? "status-active" : "status-inactive")">
                                    <i class="fas @(Model.Service.IsActive == true ? "fa-check-circle" : "fa-pause-circle")"></i>
                                    @(Model.Service.IsActive == true ? "Đang hoạt động" : "Tạm ngưng")
                                </div>
                                
                                <h1 class="service-title">@Model.Service.Name</h1>
                                
                                <div class="service-meta-enhanced">
                                    <span class="service-category-tag">
                                        <i class="fas fa-tag"></i>
                                        @Model.CategoryName
                                    </span>
                                    <span class="service-code">
                                        ID: SV-@Model.Service.ServiceId.ToString("D4")
                                    </span>
                                </div>
                                
                                <!-- Quick Stats -->
                                <div class="service-quick-stats">
                                    <div class="quick-stat-item">
                                        <span class="stat-value">@Model.Service.Price.ToString("N0")</span>
                                        <span class="stat-label">VNĐ</span>
                                    </div>
                                    <div class="quick-stat-divider"></div>
                                    <div class="quick-stat-item">
                                        <span class="stat-value">@Model.Service.DurationMinutes</span>
                                        <span class="stat-label">phút</span>
                                    </div>
                                    <div class="quick-stat-divider"></div>
                                    <div class="quick-stat-item">
                                        <span class="stat-value">@Model.BookingCount</span>
                                        <span class="stat-label">đặt lịch</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="col-md-4">
                        <div class="service-actions-sticky">
                            <div class="action-buttons-enhanced">
                                <a href="@Url.Action("EditService", "AdminService", new { id = Model.Service.ServiceId })" 
                                   class="btn btn-primary btn-enhanced">
                                    <i class="fas fa-edit"></i>
                                    <span>Chỉnh sửa</span>
                                </a>
                                
                                @if (Model.Service.IsActive == true)
                                {
                                    <button type="button" onclick="confirmStatusChange(@Model.Service.ServiceId, false)" 
                                            class="btn btn-warning btn-enhanced">
                                        <i class="fas fa-pause"></i>
                                        <span>Tạm ngưng</span>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" onclick="confirmStatusChange(@Model.Service.ServiceId, true)" 
                                            class="btn btn-success btn-enhanced">
                                        <i class="fas fa-play"></i>
                                        <span>Kích hoạt</span>
                                    </button>
                                }
                                
                                <a href="@Url.Action("ServiceList", "AdminService")" 
                                   class="btn btn-outline-secondary btn-enhanced">
                                    <i class="fas fa-arrow-left"></i>
                                    <span>Quay lại</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="service-stats-grid">
            <div class="stat-card stat-card-primary">
                <div class="stat-card-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stat-card-content">
                    <div class="stat-number">@Model.BookingCount</div>
                    <div class="stat-label">Tổng lịch hẹn</div>
                    <div class="stat-trend">
                        <i class="fas fa-arrow-up"></i>
                        <span>+12% từ tháng trước</span>
                    </div>
                </div>
            </div>
            
            <div class="stat-card stat-card-success">
                <div class="stat-card-icon">
                    <i class="fas fa-money-bill-wave"></i>
                </div>
                <div class="stat-card-content">
                    <div class="stat-number">@Model.Revenue.ToString("N0")</div>
                    <div class="stat-label">Doanh thu (VNĐ)</div>
                    <div class="stat-trend">
                        <i class="fas fa-arrow-up"></i>
                        <span>+8% từ tháng trước</span>
                    </div>
                </div>
            </div>
            
            <div class="stat-card stat-card-info">
                <div class="stat-card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-card-content">
                    <div class="stat-number">@Model.CustomerCount</div>
                    <div class="stat-label">Khách hàng</div>
                    <div class="stat-trend">
                        <i class="fas fa-arrow-up"></i>
                        <span>+5% từ tháng trước</span>
                    </div>
                </div>
            </div>
            
            <div class="stat-card stat-card-warning">
                <div class="stat-card-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-card-content">
                    <div class="stat-number">4.8</div>
                    <div class="stat-label">Đánh giá trung bình</div>
                    <div class="stat-trend">
                        <i class="fas fa-arrow-up"></i>
                        <span>+0.2 từ tháng trước</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="service-content-wrapper">
            <div class="enhanced-tabs-container">
                <ul class="nav nav-pills nav-enhanced" id="serviceDetailTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="overview-tab" data-toggle="pill" href="#overview" role="tab">
                            <div class="tab-icon">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div class="tab-content">
                                <span class="tab-title">Tổng quan</span>
                                <span class="tab-subtitle">Thông tin chi tiết</span>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="history-tab" data-toggle="pill" href="#history" role="tab">
                            <div class="tab-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <div class="tab-content">
                                <span class="tab-title">Lịch sử</span>
                                <span class="tab-subtitle">@Model.AppointmentHistory?.Count() lịch hẹn</span>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="analytics-tab" data-toggle="pill" href="#analytics" role="tab">
                            <div class="tab-icon">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <div class="tab-content">
                                <span class="tab-title">Phân tích</span>
                                <span class="tab-subtitle">Biểu đồ & xu hướng</span>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="related-tab" data-toggle="pill" href="#related" role="tab">
                            <div class="tab-icon">
                                <i class="fas fa-network-wired"></i>
                            </div>
                            <div class="tab-content">
                                <span class="tab-title">Liên quan</span>
                                <span class="tab-subtitle">@(Model.RelatedServices?.Count ?? 0) dịch vụ</span>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="tab-content" id="serviceDetailTabContent">
                <!-- Overview Tab -->
                <div class="tab-pane fade show active" id="overview" role="tabpanel">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="font-weight-bold">Mô tả dịch vụ:</h6>
                            <div class="service-description mb-4">
                                @(string.IsNullOrEmpty(Model.Service.Description) ? "Chưa có mô tả chi tiết cho dịch vụ này." : Model.Service.Description)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="font-weight-bold">Thông tin cơ bản:</h6>
                            <table class="table table-sm">
                                <tr>
                                    <th class="w-40">Mã dịch vụ:</th>
                                    <td>SV-@Model.Service.ServiceId.ToString("D4")</td>
                                </tr>
                                <tr>
                                    <th>Danh mục:</th>
                                    <td>@Model.CategoryName</td>
                                </tr>
                                <tr>
                                    <th>Giá dịch vụ:</th>
                                    <td>@Model.Service.Price.ToString("N0") đ</td>
                                </tr>
                                <tr>
                                    <th>Thời gian:</th>
                                    <td>@Model.Service.DurationMinutes phút</td>
                                </tr>
                                <tr>
                                    <th>Trạng thái:</th>
                                    <td>
                                        @if (Model.Service.IsActive == true)
                                        {
                                            <span class="badge badge-success">Đang hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Tạm ngưng</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                
                <!-- History Tab -->
                <div class="tab-pane fade" id="history" role="tabpanel">
                    <h6 class="font-weight-bold">Lịch sử đặt lịch:</h6>
                    @if (Model.AppointmentHistory != null && Model.AppointmentHistory.Any())
                    {
                        <div class="appointment-timeline">
                            @foreach (var item in Model.AppointmentHistory)
                            {
                                <div class="timeline-item">
                                    <div class="timeline-content">
                                        <div class="d-flex justify-content-between">
                                            <h6 class="font-weight-bold mb-1">
                                                <a href="@Url.Action("AppointmentDetail", "Admin", new { id = item.AppointmentId })">
                                                    #@item.AppointmentId.ToString("D4")
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                @item.AppointmentDate.ToString("dd/MM/yyyy HH:mm")
                                            </small>
                                        </div>
                                        <p class="mb-1">
                                            <strong>Khách hàng:</strong> @item.CustomerName 
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge badge-info">
                                                @item.StatusName
                                            </span>
                                            <small class="text-primary">@item.Price.ToString("N0") đ</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Dịch vụ này chưa có lịch sử đặt lịch.
                        </div>
                    }
                </div>
                
                <!-- Analytics Tab -->
                <div class="tab-pane fade" id="analytics" role="tabpanel">
                    <h6 class="font-weight-bold">Biểu đồ thống kê:</h6>
                    <div class="alert alert-info">
                        <i class="fas fa-chart-line"></i> Chức năng này đang được phát triển.
                    </div>
                </div>
                
                <!-- Related Tab -->
                <div class="tab-pane fade" id="related" role="tabpanel">
                    <h6 class="font-weight-bold">Dịch vụ cùng danh mục:</h6>
                    @if (Model.RelatedServices?.Any() == true)
                    {
                        <div class="row">
                            @foreach (var service in Model.RelatedServices)
                            {
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 related-service-card">
                                        <div class="card-body">
                                            <h6 class="card-title font-weight-bold mb-1">
                                                <a href="@Url.Action("ServiceDetail", "AdminService", new { id = service.ServiceId })">
                                                    @service.Name
                                                </a>
                                            </h6>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="text-primary font-weight-bold">@service.Price.ToString("N0") đ</span>
                                                <span class="text-muted small">@service.DurationMinutes phút</span>
                                            </div>
                                            <p class="card-text small">
                                                @(string.IsNullOrEmpty(service.Description) 
                                                    ? "Không có mô tả" 
                                                    : (service.Description.Length > 100 
                                                        ? service.Description.Substring(0, 97) + "..." 
                                                        : service.Description))
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Không có dịch vụ liên quan.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden Form -->
<form id="serviceActionForm" method="post" class="d-none">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="serviceIdInput" value="" />
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/cssjsService/js/service-detail.js"></script>
    <script>
        var successMessage = '@TempData["SuccessMessage"]';
        var errorMessage = '@TempData["ErrorMessage"]';
        var serviceRestoreUrl = '@Url.Action("RestoreService", "AdminService")';
        var serviceSoftDeleteUrl = '@Url.Action("SoftDeleteService", "AdminService")';
    </script>
}
