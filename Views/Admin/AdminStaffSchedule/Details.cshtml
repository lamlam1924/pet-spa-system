@model pet_spa_system1.Models.Appointment
@{
    ViewData["Title"] = "Chi tiết lịch làm việc nhân viên";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Chi tiết lịch làm việc nhân viên</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminStaffSchedule")">Lịch làm việc nhân viên</a></li>
            <li class="breadcrumb-item active">Chi tiết</li>
        </ol>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.AppointmentId</dd>
                <dt class="col-sm-3">Nhân viên</dt>
                <dd class="col-sm-9">@Model.Employee?.FullName</dd>
                <dt class="col-sm-3">Khách hàng</dt>
                <dd class="col-sm-9">@Model.User?.FullName</dd>
                <dt class="col-sm-3">Ngày hẹn</dt>
                <dd class="col-sm-9">@Model.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</dd>
                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">@Model.Status?.StatusName</dd>
                <dt class="col-sm-3">Ghi chú</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            </dl>
            <a href="@Url.Action("Index", "AdminStaffSchedule")" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div> 