@model pet_spa_system1.Models.Appointment
@{
    ViewData["Title"] = "Xác nhận xóa lịch làm việc nhân viên";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Xác nhận xóa lịch làm việc nhân viên</h1>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <h5>Bạn có chắc chắn muốn xóa lịch này?</h5>
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.AppointmentId</dd>
                <dt class="col-sm-3">Nhân viên</dt>
                <dd class="col-sm-9">@Model.Employee?.FullName</dd>
                <dt class="col-sm-3">Khách hàng</dt>
                <dd class="col-sm-9">@Model.User?.FullName</dd>
                <dt class="col-sm-3">Ngày hẹn</dt>
                <dd class="col-sm-9">@Model.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</dd>
                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">@Model.Status?.StatusName</dd>
                <dt class="col-sm-3">Ghi chú</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            </dl>
            <form asp-action="Delete" asp-controller="AdminStaffSchedule" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.AppointmentId" />
                <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                <a href="@Url.Action("Index", "AdminStaffSchedule")" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div> 