@model pet_spa_system1.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Tạo lịch hẹn mới";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow border-0 mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h4 class="mb-0 fw-bold text-primary">
                <i class="fas fa-calendar-plus me-2"></i>Tạo lịch hẹn mới
            </h4>
            <a href="@Url.Action("AppointmentList", "Admin")" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
            </a>
        </div>
        <div class="card-body">
            <form asp-action="AppointmentCreate" asp-controller="Admin" method="post" class="row g-3 needs-validation" novalidate>
                <!-- Thông tin khách hàng -->
                <div class="col-12">
                    <h5 class="card-title mb-3"><i class="fas fa-user me-2"></i>Thông tin khách hàng</h5>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="UserId" class="form-label">Khách hàng <span class="text-danger">*</span></label>
                    <select asp-for="UserId" asp-items="ViewBag.Users" class="form-select" required>
                        <option value="">-- Chọn khách hàng --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                    <div class="invalid-feedback">Vui lòng chọn khách hàng</div>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="CustomerName" class="form-label">Tên khách hàng</label>
                    <input asp-for="CustomerName" class="form-control" placeholder="Tự động điền khi chọn khách hàng" readonly />
                </div>
                
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="form-text">Email để gửi xác nhận lịch hẹn</div>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label">Số điện thoại</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        <input asp-for="Phone" class="form-control" placeholder="Tự động điền khi chọn khách hàng" readonly />
                    </div>
                </div>
                
                <hr class="my-2" />
                
                <!-- Thông tin lịch hẹn -->
                <div class="col-12">
                    <h5 class="card-title mb-3"><i class="fas fa-calendar-day me-2"></i>Thông tin lịch hẹn</h5>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="AppointmentDate" class="form-label">Ngày hẹn <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="far fa-calendar"></i></span>
                        <input asp-for="AppointmentDate" type="date" class="form-control" required />
                    </div>
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    <div class="invalid-feedback">Vui lòng chọn ngày hẹn</div>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="AppointmentTime" class="form-label">Giờ hẹn <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="far fa-clock"></i></span>
                        <input asp-for="AppointmentTime" type="time" class="form-control" required />
                    </div>
                    <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                    <div class="invalid-feedback">Vui lòng chọn giờ hẹn</div>
                </div>
                
                <hr class="my-2" />
                
                <!-- Thông tin thú cưng và dịch vụ -->
                <div class="col-12">
                    <h5 class="card-title mb-3"><i class="fas fa-paw me-2"></i>Thú cưng và dịch vụ</h5>
                </div>
                
                <div class="col-12" id="pet-service-container">
                    <div class="pet-service-item card mb-3">
                        <div class="card-body row g-2">
                            <div class="col-md-5">
                                <label class="form-label">Thú cưng <span class="text-danger">*</span></label>
                                <select name="SelectedPetIds" class="form-select pet-select" required>
                                    <option value="">-- Chọn thú cưng --</option>
                                    @if (ViewBag.Pets != null)
                                    {
                                        foreach (var pet in ViewBag.Pets as List<pet_spa_system1.Models.Pet>)
                                        {
                                            <option value="@pet.PetId">@pet.Name (@pet.Species)</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">Vui lòng chọn thú cưng</div>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Dịch vụ <span class="text-danger">*</span></label>
                                <select name="SelectedServiceIds" class="form-select service-select" multiple required>
                                    @if (ViewBag.Services != null)
                                    {
                                        foreach (var service in ViewBag.Services as List<pet_spa_system1.Models.Service>)
                                        {
                                            <option value="@service.ServiceId">@service.Name - @service.Price.ToString("N0") VNĐ</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">Vui lòng chọn ít nhất 1 dịch vụ</div>
                                <div class="form-text">Giữ Ctrl để chọn nhiều dịch vụ</div>
                            </div>
                            
                            <div class="col-md-1 d-flex align-items-end">
                                <button type="button" class="btn btn-outline-danger btn-remove-pet w-100">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-12">
                    <button type="button" id="add-pet-btn" class="btn btn-outline-secondary">
                        <i class="fas fa-plus me-1"></i>Thêm thú cưng khác
                    </button>
                </div>
                
                <hr class="my-2" />
                
                <!-- Thông tin bổ sung -->
                <div class="col-12">
                    <h5 class="card-title mb-3"><i class="fas fa-info-circle me-2"></i>Thông tin bổ sung</h5>
                </div>
                
                <div class="col-12">
                    <label asp-for="Notes" class="form-label">Ghi chú</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Nhập ghi chú hoặc yêu cầu đặc biệt..."></textarea>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="EmployeeId" class="form-label">Nhân viên phụ trách</label>
                    <select asp-for="EmployeeId" asp-items="ViewBag.Employees" class="form-select">
                        <option value="">-- Chưa phân công --</option>
                    </select>
                </div>
                
                <!-- Tổng chi phí -->
                <div class="col-12">
                    <div class="alert alert-info d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-info-circle me-2"></i>
                            <span>Ước tính chi phí:</span>
                        </div>
                        <div class="fw-bold fs-5" id="estimated-cost">0 VNĐ</div>
                    </div>
                </div>
                
                <div class="col-12 mt-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Tạo lịch hẹn
                        </button>
                        <button type="reset" class="btn btn-outline-secondary">
                            <i class="fas fa-undo me-1"></i>Đặt lại
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            // Khởi tạo Select2 cho các dropdown
            $('.pet-select').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn thú cưng'
            });
            
            $('.service-select').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn dịch vụ',
                allowClear: true
            });
            
            // Xử lý thêm thú cưng
            $('#add-pet-btn').click(function() {
                const newItem = $('.pet-service-item').first().clone();
                newItem.find('select').val('').trigger('change');
                $('#pet-service-container').append(newItem);
                
                // Khởi tạo Select2 cho các select mới
                newItem.find('.pet-select').select2({
                    theme: 'bootstrap-5',
                    placeholder: 'Chọn thú cưng'
                });
                
                newItem.find('.service-select').select2({
                    theme: 'bootstrap-5',
                    placeholder: 'Chọn dịch vụ',
                    allowClear: true
                });
            });
            
            // Xử lý xóa thú cưng
            $(document).on('click', '.btn-remove-pet', function() {
                if ($('.pet-service-item').length > 1) {
                    $(this).closest('.pet-service-item').remove();
                    updateEstimatedCost();
                } else {
                    alert('Phải có ít nhất một thú cưng cho lịch hẹn!');
                }
            });
            
            // Cập nhật thông tin khách hàng khi chọn
            $('#UserId').change(function() {
                const userId = $(this).val();
                if (userId) {
                    // Gọi AJAX để lấy thông tin khách hàng
                    $.ajax({
                        url: '/Admin/GetUserInfo',
                        type: 'GET',
                        data: { userId: userId },
                        success: function(response) {
                            $('#CustomerName').val(response.fullName);
                            $('#Phone').val(response.phone);
                            $('#Email').val(response.email);
                        }
                    });
                } else {
                    $('#CustomerName').val('');
                    $('#Phone').val('');
                    $('#Email').val('');
                }
            });
            
            // Validation form
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
            
            // Cập nhật ước tính chi phí
            $(document).on('change', '.service-select', function() {
                updateEstimatedCost();
            });
            
            function updateEstimatedCost() {
                let totalCost = 0;
                $('.service-select').each(function() {
                    const selectedServices = $(this).val();
                    if (selectedServices) {
                        selectedServices.forEach(serviceId => {
                            const serviceOption = $(this).find(`option[value="${serviceId}"]`);
                            const priceText = serviceOption.text().split('-')[1].trim();
                            const price = parseInt(priceText.replace(/[^\d]/g, ''));
                            totalCost += price;
                        });
                    }
                });
                
                // Format số với dấu phân cách hàng nghìn
                const formattedCost = new Intl.NumberFormat('vi-VN').format(totalCost);
                $('#estimated-cost').text(formattedCost + ' VNĐ');
            }
        });
    </script>
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <style>
        .select2-container {
            width: 100% !important;
        }
        
        .card-title {
            color: #6c757d;
            font-weight: 500;
        }
        
        .was-validated .select2-selection {
            border-color: #dc3545 !important;
        }
        
        .form-text {
            font-size: 0.75rem;
        }
    </style>
}
