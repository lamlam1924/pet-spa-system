@model pet_spa_system1.Models.Appointment

@{
    ViewData["Title"] = "Chi tiết lịch hẹn";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    
    string GetStatusClass(int statusId)
    {
        return statusId switch
        {
            1 => "warning",     // Chờ xác nhận
            2 => "success",     // Đã xác nhận
            3 => "secondary",   // Đã hoàn thành
            4 => "danger",      // Đã hủy
            _ => "light",
        };
    }
    
    string GetStatusText(int statusId)
    {
        return statusId switch
        {
            1 => "Chờ xác nhận",
            2 => "Đã xác nhận",
            3 => "Đã hoàn thành",
            4 => "Đã hủy",
            _ => "Không xác định",
        };
    }
}

<div class="container-fluid py-4">
    <!-- Header với thông tin và nút điều hướng -->
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("AppointmentList", "Admin")">Lịch hẹn</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </nav>
            <h3 class="mb-0 fw-bold">
                <i class="fas fa-calendar-check me-2"></i>Chi tiết lịch hẹn #@Model.AppointmentId
            </h3>
        </div>
        <div class="d-flex gap-2 mt-2 mt-md-0">
            <a href="@Url.Action("AppointmentList", "Admin")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
            <a href="@Url.Action("AppointmentEdit", "Admin", new { id = Model.AppointmentId })" class="btn btn-primary">
                <i class="fas fa-edit me-1"></i>Chỉnh sửa
            </a>
            <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fas fa-trash me-1"></i>Xóa
            </button>
        </div>
    </div>
    
    <div class="row">
        <!-- Thông tin chính về lịch hẹn -->
        <div class="col-lg-8">
            <div class="card shadow border-0 mb-4">
                <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin lịch hẹn</h5>
                    <span class="badge bg-@GetStatusClass(Model.StatusId) fs-6 px-3 py-2">
                        @GetStatusText(Model.StatusId)
                    </span>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small">Mã lịch hẹn</label>
                                <div class="fs-5">#@Model.AppointmentId</div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="text-muted small">Ngày tạo</label>
                                <div>@($"{Model.CreatedAt:dd/MM/yyyy HH:mm}")</div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="text-muted small">Thời gian hẹn</label>
                                <div class="d-flex align-items-center">
                                    <i class="far fa-clock me-2 text-primary"></i>
                                    <span class="fs-5">@Model.AppointmentDate.ToString("HH:mm") - @Model.AppointmentDate.ToString("dd/MM/yyyy")</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small">Khách hàng</label>
                                <div class="d-flex align-items-center">
                                    <div class="avatar bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center"
                                         style="width: 32px; height: 32px;">
                                        @Model.User.FullName.Substring(0, 1)
                                    </div>
                                    <div>
                                        <div class="fs-5">@Model.User.FullName</div>
                                        <div class="small text-muted">
                                            <i class="fas fa-phone me-1"></i>@Model.User.Phone
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="text-muted small">Nhân viên phụ trách</label>
                                @if (Model.Employee != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="avatar bg-success text-white rounded-circle me-2 d-flex align-items-center justify-content-center"
                                             style="width: 32px; height: 32px;">
                                            @Model.Employee.FullName.Substring(0, 1)
                                        </div>
                                        <div>@Model.Employee.FullName</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted"><i class="fas fa-user-clock me-1"></i>Chưa phân công</div>
                                }
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="text-muted small">Ghi chú</label>
                                <div class="border rounded p-3 bg-light">
                                    @if (!string.IsNullOrEmpty(Model.Notes))
                                    {
                                        @Model.Notes
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Không có ghi chú</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Thông tin dịch vụ và thú cưng -->
            <div class="card shadow border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-paw me-2"></i>Thú cưng và dịch vụ</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Thú cưng</th>
                                    <th>Dịch vụ</th>
                                    <th>Đơn giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var petAppointment in Model.AppointmentPets)
                                {
                                    var rowspan = Model.AppointmentServices.Count;
                                    <tr>
                                        <td rowspan="@rowspan" class="align-middle">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-pet bg-light rounded-circle me-2 d-flex align-items-center justify-content-center"
                                                     style="width: 40px; height: 40px;">
                                                    <i class="fas fa-paw"></i>
                                                </div>
                                                <div>
                                                    <div>@petAppointment.Pet.Name</div>
                                                    <div class="small text-muted">@petAppointment.Pet.Species, @petAppointment.Pet.Age tuổi</div>
                                                </div>
                                            </div>
                                        </td>
                                        
                                        @if (Model.AppointmentServices.Count > 0)
                                        {
                                            var firstService = Model.AppointmentServices.First();
                                            <td>@firstService.Service.Name</td>
                                            <td class="text-end">@firstService.Service.Price.ToString("N0") VNĐ</td>
                                        }
                                        else
                                        {
                                            <td colspan="2" class="text-center text-muted fst-italic">Không có dịch vụ</td>
                                        }
                                    </tr>
                                    
                                    @if (Model.AppointmentServices.Count > 1)
                                    {
                                        foreach (var serviceAppointment in Model.AppointmentServices.Skip(1))
                                        {
                                            <tr>
                                                <td>@serviceAppointment.Service.Name</td>
                                                <td class="text-end">@serviceAppointment.Service.Price.ToString("N0") VNĐ</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                            <tfoot class="fw-bold">
                                <tr>
                                    <td colspan="2" class="text-end">Tổng chi phí:</td>
                                    <td class="text-end">@Model.AppointmentServices.Sum(s => s.Service.Price).ToString("N0") VNĐ</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Sidebar với trạng thái và hành động -->
        <div class="col-lg-4">
            <!-- Thay đổi trạng thái -->
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Cập nhật trạng thái</h5>
        </div>
        <div class="card-body">
                    <form action="@Url.Action("UpdateStatus", "Admin")" method="post">
                        <input type="hidden" name="id" value="@Model.AppointmentId" />
                        <div class="mb-3">
                            <label class="form-label">Trạng thái hiện tại</label>
                            <div>
                                <span class="badge bg-@GetStatusClass(Model.StatusId) fs-6 px-3 py-2">
                                    @GetStatusText(Model.StatusId)
                                </span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Chọn trạng thái mới</label>
                            <select name="statusId" class="form-select">
                                @if (Model.StatusId == 1)
                                {
                                    <option value="1" selected>Chờ xác nhận</option>
                                }
                                else
                                {
                                    <option value="1">Chờ xác nhận</option>
                                }
                                
                                @if (Model.StatusId == 2)
                                {
                                    <option value="2" selected>Đã xác nhận</option>
                                }
                                else
                                {
                                    <option value="2">Đã xác nhận</option>
                                }
                                
                                @if (Model.StatusId == 3)
                                {
                                    <option value="3" selected>Đã hoàn thành</option>
                                }
                                else
                                {
                                    <option value="3">Đã hoàn thành</option>
                                }
                                
                                @if (Model.StatusId == 4)
                                {
                                    <option value="4" selected>Đã hủy</option>
                                }
                                else
                                {
                                    <option value="4">Đã hủy</option>
                                }
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">Cập nhật trạng thái</button>
                    </form>
                </div>
            </div>
            
            <!-- Hành động nhanh -->
            <div class="card shadow border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Hành động nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-paper-plane text-primary me-2"></i>
                                Gửi email nhắc lịch
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-phone-alt text-success me-2"></i>
                                Gọi cho khách hàng
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-print text-secondary me-2"></i>
                                In phiếu lịch hẹn
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-receipt text-info me-2"></i>
                                Tạo hóa đơn
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal xóa lịch hẹn -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa lịch hẹn #@Model.AppointmentId?</p>
                <p class="text-danger"><small>Lưu ý: Hành động này không thể hoàn tác!</small></p>
            </div>
            <div class="modal-footer">
                <form action="@Url.Action("DeleteAppointment", "Admin")" method="post">
                    <input type="hidden" name="id" value="@Model.AppointmentId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar {
            width: 40px;
            height: 40px;
            font-weight: 500;
        }
    </style>
}