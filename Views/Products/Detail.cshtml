    <script>


                       // Tăng / Giảm số lượng
        async function updateQuantity(productId, action) {
            const input = document.getElementById(`qty-${productId}`);
            let currentQty = parseInt(input.value);
            const stock = parseInt(input.getAttribute('data-stock'));

            if (isNaN(currentQty)) currentQty = 1;

            let newQty = currentQty;

            if (action === 'increase') {
                if (currentQty < stock) {
                    newQty = currentQty + 1;
                } else {
                    showToast("Đã đạt số lượng tồn kho tối đa.", false);
                    return;
                }
            } else if (action === 'decrease') {
                if (currentQty > 1) {
                    newQty = currentQty - 1;
                } else {
                    return;
                }
            }

            await updateCartQuantity(productId, newQty);
        }

        // Nhập trực tiếp
        async function handleQuantityInput(productId, newQty) {
            const quantity = parseInt(newQty);
            if (isNaN(quantity) || quantity < 1) {
                showToast("Số lượng không hợp lệ.", false);
                return;
            }

            const response = await fetch('/Cart/UpdateQuantity', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, quantity })
            });

            const result = await response.json();
            const input = document.getElementById(`qty-${productId}`);

            if (response.ok) {
                input.value = quantity;
                showToast("Cập nhật số lượng thành công!");
            } else {
                showToast(result.message || "Số lượng vượt quá giới hạn.", false);

                if (result.availableStock) {
                    input.value = result.availableStock;
                }
            }
        }

        // Gửi cập nhật lên server
        async function updateCartQuantity(productId, quantity) {
            const response = await fetch('/Cart/UpdateQuantity', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, quantity })
            });

            const result = await response.json();
            const input = document.getElementById(`qty-${productId}`);

            if (response.ok) {
                input.value = quantity;
                showToast("Cập nhật số lượng thành công!");
            } else {
                showToast(result.message || "Lỗi khi cập nhật.", false);

                if (result.availableStock) {
                    input.value = result.availableStock;
                }
            }
        }

             function prepareQuantityBeforeSubmit(productId, button) {
            const qty = document.getElementById(`qty-${productId}`).value;
            const qtyToAdd = document.getElementById('qtyToAdd');
            qtyToAdd.value = qty;

            // Submit form chứa nút
            button.closest('form').submit();
        }
                    async function addToCartAjax(productId) {
            const quantity = parseInt(document.getElementById(`qty-${productId}`).value) || 1;

            const response = await fetch('/Cart/AddToCartAjax', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: productId, quantity: quantity })
            });

            const result = await response.json();

            if (result.success) {
                showToast("Đã thêm vào giỏ hàng!", true);
                runCartFlyEffect(productId);
            } else {
                showToast(result.message || "Lỗi khi thêm vào giỏ hàng!", false);
            }
        }

        // Hiển thị thông báo toast
        function showToast(message, isSuccess = true) {
            const toast = document.getElementById('cart-toast');
            const toastMsg = document.getElementById('cart-toast-message');

            toastMsg.textContent = message;
            toast.style.backgroundColor = isSuccess ? '#28a745' : '#dc3545';
            toast.style.display = 'block';

            toast.classList.remove('toast-popup');
            void toast.offsetWidth;
            toast.classList.add('toast-popup');

            setTimeout(() => {
                toast.style.display = 'none';
            }, 2000);
        }


    </script>



