@model pet_spa_system1.ViewModel.ReviewViewModel
<div class="media mb-4 review-item" data-review-id="@Model.Id">
    <img src="@(Model.Comment != null && Model.Comment.StartsWith("[SYSTEM_REPLY]") ? "/imgAdmin/boy.png" : Model.UserAvatar)" 
         alt="Reply" class="img-fluid mr-3 mt-1 rounded-circle" style="width: 35px;">
    <div class="media-body">
        <h6 class="mb-1">
            @if(Model.Comment != null && Model.Comment.StartsWith("[SYSTEM_REPLY]"))
            {
                <span>Chăm sóc khách hàng <i class="fas fa-headset text-primary"></i></span>
            }
            else
            {
                @Model.ReviewerName
            }
            <small class="text-muted"> - <i>@Model.CreatedAt.ToString("dd/MM/yyyy")</i></small>
        </h6>
        <p>
            @if(Model.Comment != null && Model.Comment.StartsWith("[SYSTEM_REPLY]"))
            {
                @Model.Comment.Substring("[SYSTEM_REPLY] ".Length)
            }
            else
            {
                @Model.Comment
            }
        </p>
    </div>
</div>
