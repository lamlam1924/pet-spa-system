@{
    ViewData["Title"] = "Thanh toán thất bại";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Nếu bạn đang dùng layout chung
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .payment-fail-container {
        max-width: 600px;
        margin: 80px auto;
        padding: 30px;
        background-color: #fff;
        border: 1px solid #f5c2c7;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(220, 53, 69, 0.1);
        text-align: center;
    }

        .payment-fail-container h2 {
            color: #dc3545;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .payment-fail-container .alert {
            font-size: 15px;
            margin-bottom: 20px;
        }

        .payment-fail-container .btn {
            padding: 10px 25px;
        }
</style>

<div class="payment-fail-container">
    <h2><i class="bi bi-x-circle-fill me-2"></i>Thanh toán thất bại!</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <span>@TempData["Error"]</span>
        </div>
    }
    else
    {
        <div class="alert alert-danger d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <span>Có lỗi xảy ra trong quá trình thanh toán. Vui lòng thử lại sau.</span>
        </div>
    }

    <a href="@Url.Action("Checkout", "Checkout")" class="btn btn-outline-danger">
        <i class="bi bi-arrow-repeat me-1"></i> Thử lại thanh toán
    </a>
</div>
