@section Scripts {
    <!-- Summernote JS -->
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/lang/summernote-vi-VN.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Destroy any existing Summernote instance first
            if ($('#contentEditor').hasClass('note-editor')) {
                $('#contentEditor').summernote('destroy');
            }

            // Initialize Summernote
            $('#contentEditor').summernote({
                height: 400,
                lang: 'vi-VN',
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['fontname', ['fontname']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ],
                placeholder: 'Viết nội dung bài viết của bạn tại đây...',
                focus: false,
                callbacks: {
                    onImageUpload: function(files) {
                        // Handle image upload
                        for (let i = 0; i < files.length; i++) {
                            uploadImageToEditor(files[i]);
                        }
                    }
                }
            });

            // Featured image upload
            $('#featuredImageArea').click(function(e) {
                e.preventDefault();
                $('#featuredImageInput').click();
            });

            $('#featuredImageInput').change(function(e) {
                const file = this.files[0];
                if (file) {
                    // Validate file type
                    if (!file.type.match('image.*')) {
                        alert('Vui lòng chọn file hình ảnh!');
                        return;
                    }

                    // Validate file size (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File quá lớn! Vui lòng chọn file nhỏ hơn 5MB.');
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#featuredImagePreview').html(`
                            <div class="position-relative d-inline-block mt-3">
                                <img src="${e.target.result}" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
                                <button type="button" class="btn btn-sm btn-danger position-absolute" style="top: 5px; right: 5px;" onclick="removeFeaturedImage()">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        `);
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Drag and drop for featured image
            $('#featuredImageArea').on('dragover', function(e) {
                e.preventDefault();
                $(this).addClass('dragover');
            });

            $('#featuredImageArea').on('dragleave', function(e) {
                e.preventDefault();
                $(this).removeClass('dragover');
            });

            $('#featuredImageArea').on('drop', function(e) {
                e.preventDefault();
                $(this).removeClass('dragover');
                
                const files = e.originalEvent.dataTransfer.files;
                if (files.length > 0) {
                    $('#featuredImageInput')[0].files = files;
                    $('#featuredImageInput').trigger('change');
                }
            });

            // Preview functionality
            $('#previewBtn').click(function() {
                const title = $('#Title').val();
                const content = $('#contentEditor').summernote('code');
                const category = $('#Category').val();
                
                if (!title || !content) {
                    alert('Vui lòng nhập tiêu đề và nội dung trước khi xem trước.');
                    return;
                }

                $('#previewContent').html(`
                    <div class="blog-preview">
                        <h2>${title}</h2>
                        ${category ? `<span class="badge badge-primary mb-3">${category}</span>` : ''}
                        <div class="content">${content}</div>
                    </div>
                `);
                
                $('#previewArea').slideToggle();
            });

            // Form submission
            $('#blogForm').submit(function(e) {
                const content = $('#contentEditor').summernote('code');
                if (!content || content.trim() === '<p><br></p>') {
                    e.preventDefault();
                    alert('Vui lòng nhập nội dung bài viết.');
                    return false;
                }
            });
        });

        function removeFeaturedImage() {
            $('#featuredImageInput').val('');
            $('#featuredImagePreview').empty();
        }

        function uploadImageToEditor(file) {
            // Validate file type
            if (!file.type.match('image.*')) {
                alert('Vui lòng chọn file hình ảnh!');
                return;
            }

            // Validate file size (5MB)
            if (file.size > 5 * 1024 * 1024) {
                alert('File quá lớn! Vui lòng chọn file nhỏ hơn 5MB.');
                return;
            }

            // For now, just insert as base64
            const reader = new FileReader();
            reader.onload = function(e) {
                $('#contentEditor').summernote('insertImage', e.target.result);
            };
            reader.readAsDataURL(file);
        }
    </script>
}

